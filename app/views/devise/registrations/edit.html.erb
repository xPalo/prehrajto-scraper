<h1 class="text-center"><%= t(:'header.edit_profile') %></h1>

<div class="form-signin my-4 mx-auto w-100" style="max-width: 400px;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-3"><%= t(:'devise.waiting_confirmation_for') %>: <strong><%= resource.unconfirmed_email %></strong></div>
    <% end %>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.password') %> <i>(<%= t(:'devise.password_leave_blank') %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control w-100" %>
      <% if @minimum_password_length %>
        <small class="form-text text-muted">
          <%= "#{@minimum_password_length} #{t(:'devise.minimum_characters')}" %>
        </small>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control w-100" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.current_password') %> <i>(<%= t(:'devise.current_password_confirmation') %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control w-100" %>
    </div>

    <div class="actions text-center">
      <%= f.submit t(:'devise.update_btn'), class: "btn btn-light my-2 rounded-pill" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center flex-wrap gap-2">
    <%= link_to t(:back), :back, class: "btn btn-dark rounded-pill" %>
    <%= button_to t(:delete), registration_path(resource_name), data: { confirm: t(:delete_confirmatiom) }, method: :delete, class: "btn btn-danger rounded-pill" %>
  </div>
</div>