<h1 class="text-center"><%= t(:'devise.login') %></h1>

<div class="form-signin my-4 mx-auto w-100" style="max-width: 400px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-100" %>
    </div>

    <div class="form-group mb-3">
      <%= f.label t(:'devise.password') %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-100" %>
    </div>

    <div class="actions text-center">
      <%= f.submit t(:'devise.login_btn'), class: "btn btn-light rounded-pill" %>
    </div>
  <% end %>
</div>