<div class="form-signin my-4 mx-auto w-100">
  <%= form_with(model: @fav) do |form| %>

    <% if @fav.errors.any? %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>
          <% @fav.errors.each do |error| %>
            <%= error.full_message %>
            <br>
          <% end %>
        </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <div class="form-group mb-3 mx-auto">
      <%= form.label t('fav.title') %>
      <%= form.text_field :title, value: params["title"], class:"form-control w-100 mx-auto", style:"max-width: 400px;" %>
    </div>

    <div class="form-group mb-3">
      <%= form.hidden_field :duration, value: params["duration"] %>
      <%= form.hidden_field :size, value: params["size"] %>
      <%= form.hidden_field :link, value: @video_src %>
      <%= form.hidden_field :image_src, value: params["image_src"] %>
      <%= form.hidden_field :user_id, value: current_user.id %>
    </div>

    <div>
      <%= form.submit t('fav.add'), class:"btn btn-light my-auto rounded-pill"%>
    </div>
  <% end %>
</div>