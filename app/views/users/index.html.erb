<h1 class="mb-4"><%= I18n.t('user.index') %></h1>

<ul class="nav nav-tabs mb-3" id="userTabs" role="tablist">
  <% @users.each_with_index do |user, index| %>
    <li class="nav-item" role="presentation">
      <button class="nav-link <%= 'active' if index == 0 %>"
              id="user-tab-<%= user.id %>"
              data-bs-toggle="tab"
              data-bs-target="#user-<%= user.id %>"
              type="button"
              role="tab"
              aria-controls="user-<%= user.id %>"
              aria-selected="<%= index == 0 %>">
        <span class="badge bg-dark rounded-circle me-2">
          <%= user.favs.size %>
        </span>
        <%= truncate(user.email.split('@').first, length: 20) %>
      </button>
    </li>
  <% end %>
</ul>

<div class="tab-content" id="userTabsContent">
  <% @users.each_with_index do |user, index| %>
    <div class="tab-pane fade <%= 'show active' if index == 0 %>"
         id="user-<%= user.id %>"
         role="tabpanel"
         aria-labelledby="user-tab-<%= user.id %>">

      <div class="card mb-4 shadow-sm loaded">
        <div class="card-body">
          <h5 class="card-title"><%= user.email %></h5>
          <p class="card-text">
            <%= I18n.t('user.favs_count') %>: <strong><%= user.favs.size %></strong>
          </p>

          <% if user.favs.any? %>
            <div class="table-responsive mt-4">
              <table class="table table-striped table-sm align-middle">
                <thead class="table-light">
                <tr>
                  <th scope="col"><i class="bi bi-film"></i> <%= I18n.t('fav.title') %></th>
                  <th scope="col"><i class="bi bi-calendar-plus"></i> <%= I18n.t('created_at') %></th>
                </tr>
                </thead>
                <tbody>
                <% user.favs.each do |fav| %>
                  <tr>
                    <td><%= link_to fav.title, fav_path(fav), class: "text-decoration-none text-dark fw-bold" %></td>
                    <td><%= fav.created_at.strftime("%d. %m. %Y") %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mt-3"><em><%= I18n.t('user.no_favs') %></em></p>
          <% end %>
        </div>

        <% if user.watchdogs.any? %>
          <div class="card mb-4 shadow-sm loaded">
            <div class="card-body">
              <h5 class="card-title">Watchdogy</h5>

              <div class="table-responsive mt-3">
                <table class="table table-striped table-sm align-middle">
                  <thead class="table-light">
                  <tr>
                    <th>Odkiaľ</th>
                    <th>Kam</th>
                    <th>Dátumy</th>
                    <th>Cena max</th>
                    <th>Status</th>
                    <th></th>
                  </tr>
                  </thead>
                  <tbody>
                  <% user.watchdogs.each do |watchdog| %>
                    <tr>
                      <td><%= watchdog.from_airport %></td>
                      <td><%= watchdog.to_airport.presence || watchdog.to_country %></td>
                      <td>
                        <% if watchdog.date_watch_from == watchdog.date_watch_to %>
                          <%= l(watchdog.date_watch_from) %>
                        <% else %>
                          <%= l(watchdog.date_watch_from) %> – <%= l(watchdog.date_watch_to) %>
                        <% end %>
                      </td>
                      <td>
                        <% if watchdog.max_price.present? %>
                          <%= number_to_currency(watchdog.max_price, unit: "€", precision: 0) %>
                        <% else %>
                          –
                        <% end %>
                      </td>
                      <td>
                <span class="badge <%= watchdog.is_active? ? 'bg-success' : 'bg-secondary' %>">
                  <%= watchdog.is_active? ? "Aktívny" : "Neaktívny" %>
                </span>
                      </td>
                      <td>
                        <%= link_to "Zobraziť", watchdog_path(watchdog), class: "btn btn-sm btn-outline-primary" %>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% else %>
          <p class="text-muted"><em>Žiadne watchdogy</em></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>